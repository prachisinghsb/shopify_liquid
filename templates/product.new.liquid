<div class="product">
  <div class="page-width">
    <h1>KAPDE</h1>
    <h2>{{ product.title }}</h2>
    <p>{{ product.description }}</p>

    {% for image in product.images %}
      <img src="{{ image | image_url: small }}" />
    {% endfor %}

    <p>{{ product.price | money }}</p>

    {{ product.handle }}
    <br>
    {{ product.url }}

    {% section 'my-page-text' %}
  </div>
</div>
